<div style="text-align: center" class="product-item">
    <a href="{{ path('product', {'slug' : product.slug }) }}">
        <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
    </a>
    {% for tag_name in product.tag_names %}
        <span class="badge rounded-pill bg-primary mb-2">{{ tag_name }}</span>
    {% endfor %}
    <h5>{{ product.name }}</h5>
    <span class="product-subtitle">{{ product.subtitle }}</span><br/>
    <span class="product-price">{{ (product.price /100)|number_format(2, ',', '.') }} â‚¬</span>
</div>